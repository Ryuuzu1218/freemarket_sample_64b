.main
  .main__header
    .main__header__logo
      = link_to image_tag('logo/logo.png', height: '50px', width: '175px', class: "main__header__logo__image")
    .main__header__bar
      %ul.main__header__bar__ul
        %li.main__header__bar__ul__l1
          会員情報
          .main__header__bar__ul__l1__statu1
        %li.main__header__bar__ul__l2--1
          住所登録
          .main__header__bar__ul__l2__statu2--1
        %li.main__header__bar__ul__l3
          完了
          .main__header__bar__ul__l3__statu3

  .main__top
    .main__top__member-register
      .main__top__member-register__1
        %h2 お届け先住所入力
      .main__top__form
        .main__top__form__1#form-name
          = form_for "#" do |f|
            .main__top__form__1__content
              .main__top__form__1__content__box-name
                = f.label :"お名前"
                %span.main__top__form__1__content__reqire 必須
              .main__top__form__1__content__box-name__last
                = f.text_field :first_name, class: "main__top__form__1__content__text-box--1 validate[required]", placeholder: "例)栄"
                = f.text_field :last_name, class: "main__top__form__1__content__text-box--2 validate[required]", placeholder: "例)太郎"
            .main__top__form__1__content
              .main__top__form__1__content__box-name
                = f.label :"お名前(カナ)"
                %span.main__top__form__1__content__reqire 必須
              .main__top__form__1__content__box-name__last
                = f.text_field :first_name_kana, class: "main__top__form__1__content__text-box--1 validate[required]", placeholder: "例)サカエ"
                = f.text_field :last_name_kana, class: "main__top__form__1__content__text-box--2 validate[required]", placeholder: "例)タロウ"

            .main__top__form__1__content
              = f.label :"郵便番号"
              %span.main__top__form__1__content__reqire 必須
              = f.text_field :zipcode, class: "main__top__form__1__content__text-box validate[required]", placeholder: "例)５１０８０２２"
            .main__top__form__1__content
              = f.label :"都道府県"
              %span.main__top__form__1__content__reqire 必須
              = f.email_field :prefecture, class: "main__top__form__1__content__text-box validate[required]", placeholder: "例)愛知県"
            .main__top__form__1__content
              = f.label :"市区町村"
              %span.main__top__form__1__content__reqire 必須
              = f.password_field :city, class: "main__top__form__1__content__text-box validate[required]", placeholder: "例)名古屋市西区"
            .main__top__form__1__content
              = f.label :"番地"
              %span.main__top__form__1__content__reqire 必須
              = f.password_field :address, class: "main__top__form__1__content__text-box validate[required]", placeholder: "例)3-2"
            .main__top__form__1__content
              = f.label :"建物名"
              %span.main__top__form__1__content__reqire--1 任意
              = f.password_field :building, class: "main__top__form__1__content__text-box", placeholder: "例)サカエビル3F"
            .main__top__form__1__content
              = f.label :"電話番号"
              %span.main__top__form__1__content__reqire--1 任意
              = f.password_field :phone, class: "main__top__form__1__content__text-box", placeholder: "例)09012345678"
            .main__top__form__1__content__text__bottom
              = f.submit "登録する", class: "main__top__form__1__content__text__bottom--btn"



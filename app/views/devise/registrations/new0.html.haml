.main-sign
  %header.header
    .header__logo
      = link_to image_tag("logo/logo.png", height: '50', width: '185', class:"header__logo--red"), root_path

  .new
    .new__box 新規会員登録
    .new__box__1
      .new__box__1__2
        = link_to users_new1_path, class: "new__box__1__2__btn new__box__1__2__btn--mail" do
          = icon('far', 'envelope', class:'icon')
          メールアドレスで登録する
        = link_to "#", class: "new__box__1__2__btn new__box__1__2__btn--facebook" do
          = icon('fab', 'facebook-square', class:'icon')
          Facebookで登録する
        = link_to "#", class: "new__box__1__2__btn new__box__1__2__btn--google" do
          = icon('fab', 'google', class:'icon')
          Googleで登録する
 
  .user-footer
    .user-footer__center
      %ul.menu
        %li
          = link_to "プライバシーポリシー", "#"
        %li
          = link_to "フリマ利用規約", "#"
        %li
          = link_to "特定商取引に関する表記", "#"
      .user-footer__center__logo
        = link_to image_tag("logo/logo.png", width:"40%", height:"40%",class:"footer__center__logo--red2") ,"#"

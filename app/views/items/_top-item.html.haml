%li.top-items__list
  = link_to item_path(item), class: "top-items__list__link" do
    %figure.top-items__list__link__image
      = image_tag "#{item.item_images.first.image}" if item.item_images.present?
    .top-items__list__link__body
      %h3.top-items__list__link__body__name
        #{item.name}
      .top-items__list__link__body__explanation
        %ul
          %li
            #{item.price}円
          %li
            %i.fas.fa-star
            #{item.likes}
        %p
          (税込) 